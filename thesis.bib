keywords = {Agriculture,CEPAL,Climate prediction,Economic,FAO,IPCC,Intergovernmental Panel on Climate Change,Propitiatory ritual Abbreviations,TCK,TCP,Traditional Climate Knowledge,Traditional Climate Predictors},
title = {{Traditional climate knowledge: a case study in a peasant community of Tlaxcala, Mexico}},
