doi = {10.1038/ncomms6618},
file = {:E$\backslash$:/thesis/05{\_}lit/bocinksy {\&} kohler 2014 - A 2,000-year reconstruction of the rain-fed maize agricultural niche in the US Southwest.pdf:pdf},
