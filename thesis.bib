journal = {Ecosphere},
keywords = {30 june 2014,accepted 28 march 2014,april 2014,corresponding editor,davies,ecological niche model,ensemble methods,final version received 30,gadopsis bispinosus,j,lobag,lobag-oc,machine learning,presence-only model,published,received 26 june 2013,revised 3 january 2014,species distribution model,support vector machines,t},
